	bool "CTR_RADON_SLOT"
	default CTR_RADON_SLOT_A
	default CTR_RADON_SLOT_B if CTR_X2_MODBUS_B

config CTR_RADON_SLOT_A
	bool "Slot A"

config CTR_RADON_SLOT_B
	bool "Slot B"

endchoice

endif # CTR_RADON
