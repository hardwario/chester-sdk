config CTR_RADON
	bool "CTR_RADON"
	default n
	depends on CTR_CONFIG
	depends on DT_HAS_NXP_SC16IS7XX_ENABLED
	depends on MODBUS

if CTR_RADON

module = CTR_RADON
module-str = CHESTER Piketronic Radon Subsystem
